<p id="notice"><%= notice %></p>

<h1>Listing File Uploads</h1>

<table>
  <thead>
    <tr>
      <th>Filename</th>
      <th>File Type</th>
      <th>Uploaded At</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @file_uploads.each do |file_upload| %>
      <tr>
        <td><%= file_upload.filename %></td>
        <td><%= file_upload.content_type %></td>
        <td><%= file_upload.created_at %></td>
        <td><%= link_to 'Download', file_upload %></td>
        <td><%= link_to 'Delete', file_upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

